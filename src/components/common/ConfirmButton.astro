---
interface Props {
  text: string;
  onClick: () => void;
  className?: string;
}

const { text, onClick, className } = Astro.props;
const id = `button-${Math.random().toString(36).substring(2, 9)}`;
---

<button
  id={id}
  class={`px-4 py-2 rounded-md text-white font-semibold ${className}`}
  set:html={text}
>
</button>

<script define:vars={{ onClick, id }}>
  document.getElementById(id)?.addEventListener('click', onClick);
</script>
