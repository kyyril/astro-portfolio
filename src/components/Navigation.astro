</nav>

<!-- Theme Toggle - Top Right -->
<div class="theme-toggle-container">
  <ThemeToggle />
</div>

<!-- Bottom Spacer -->
<div class="nav-spacer"></div>

<script>
  // Set active state based on current page
  function setActiveNavItem() {
    const currentPath = window.location.pathname;
    const navItems = document.querySelectorAll('.nav-item');
    
    navItems.forEach(item => {
      const href:any = item.getAttribute('href');
      if (href === currentPath || (href !== '/' && currentPath.startsWith(href))) {
        item.setAttribute('data-current', 'true');
      } else {
        item.setAttribute('data-current', 'false');
      }
    });
  }

  // Run on page load
  document.addEventListener('DOMContentLoaded', setActiveNavItem);
  
  // Run on navigation (for SPA-like behavior)
  document.addEventListener('astro:page-load', setActiveNavItem);
</script>
