---

<!-- Bottom Navigation Bar -->
<nav class="fixed bottom-4 left-1/2 transform -translate-x-1/2 w-[330px] bg-background/30 backdrop-blur-xl z-50 rounded-lg border border-white/10">
  <div class="flex justify-around items-center py-3 px-2">
    <!-- Home/Profile -->
    <a href="/" class="relative group nav-item">
      <div class="w-6 h-6 rounded-full bg-gradient-to-r from-blue-500 to-purple-600 flex items-center justify-center transition-all duration-300 hover:scale-110 active:scale-95">
        <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
          <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"/>
        </svg>
      </div>
    </a>

    <!-- Projects -->
    <a href="/projects" class="relative group nav-item">
      <svg class="w-5 h-5 transition-colors duration-300 group-hover:text-blue-500" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M12.316 3.051a1 1 0 01.633 1.265l-4 12a1 1 0 11-1.898-.632l4-12a1 1 0 011.265-.633zM5.707 6.293a1 1 0 010 1.414L3.414 10l2.293 2.293a1 1 0 11-1.414 1.414l-3-3a1 1 0 010-1.414l3-3a1 1 0 011.414 0zm8.586 0a1 1 0 011.414 0l3 3a1 1 0 010 1.414l-3 3a1 1 0 11-1.414-1.414L16.586 10l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd"/>
      </svg>
    </a>

    <!-- Blog -->
    <a href="/blog" class="relative group nav-item">
      <svg class="w-5 h-5 transition-colors duration-300 group-hover:text-blue-500" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z" clip-rule="evenodd"/>
      </svg>
    </a>

    <!-- Guestbook -->
    <a href="/guestbook" class="relative group nav-item">
      <svg class="w-5 h-5 transition-colors duration-300 group-hover:text-blue-500" fill="currentColor" viewBox="0 0 20 20">
        <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
        <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
      </svg>
    </a>

    <!-- Chat -->
    <a href="/chat" class="relative group nav-item">
      <svg class="w-5 h-5 transition-colors duration-300 group-hover:text-blue-500" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M18 10c0 3.866-3.582 7-8 7a8.841 8.841 0 01-4.083-.98L2 17l1.338-3.123C2.493 12.767 2 11.434 2 10c0-3.866 3.582-7 8-7s8 3.134 8 7zM7 9H5v2h2V9zm8 0h-2v2h2V9zM9 9h2v2H9V9z" clip-rule="evenodd"/>
      </svg>
    </a>
  </div>
</nav>

<!-- Theme Toggle - Top Right -->
<div class="fixed top-4 right-4 z-50">
  <!-- <ThemeToggle /> -->
</div>

<!-- Bottom Spacer -->
<div class="h-20"></div>

<style>
  .nav-item {
    @apply text-gray-600 dark:text-gray-400 hover:text-blue-500 dark:hover:text-blue-400 transition-all duration-300;
  }
  
  .nav-item:hover {
    transform: scale(1.1);
  }
  
  .nav-item:active {
    transform: scale(0.95);
  }

  /* Active state styling */
  .nav-item[data-current="true"] {
    @apply text-blue-500 dark:text-blue-400;
  }

  .nav-item[data-current="true"] svg {
    @apply text-blue-500 dark:text-blue-400;
  }
</style>

<script>
  // Set active state based on current page
  function setActiveNavItem() {
    const currentPath = window.location.pathname;
    const navItems = document.querySelectorAll('.nav-item');
    
    navItems.forEach(item => {
      const href:any = item.getAttribute('href');
      if (href === currentPath || (href !== '/' && currentPath.startsWith(href))) {
        item.setAttribute('data-current', 'true');
      } else {
        item.setAttribute('data-current', 'false');
      }
    });
  }

  // Run on page load
  document.addEventListener('DOMContentLoaded', setActiveNavItem);
  
  // Run on navigation (for SPA-like behavior)
  document.addEventListener('astro:page-load', setActiveNavItem);
</script>