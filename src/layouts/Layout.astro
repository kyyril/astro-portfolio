---
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import ThemeProvider from '../components/ThemeProvider.astro';
import DisableConflictingScrolls from '../components/DisableConflictingScrolls.astro';
import ScrollOptimizer from '../components/ScrollOptimizer.astro';

interface Props {
  title: string;
  description?: string;
  noIndex?: boolean;
  ogImage?: string;
}

const {
  title,
  description = "Modern portfolio built with Astro.js - High-performance web development with smooth animations",
  noIndex = false,
  ogImage = "/og-image.jpg"
} = Astro.props;

const canonicalURL = Astro.site
  ? new URL(Astro.url.pathname, Astro.site)
  : new URL(Astro.url.pathname, `http://localhost:4321`);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    <link rel="canonical" href={canonicalURL} />

    <!-- SEO Meta Tags -->
    <meta name="robots" content={noIndex ? "noindex, nofollow" : "index, follow"} />
    <meta name="author" content="Portfolio" />
    <meta name="keywords" content="portfolio, web development, astro, performance, smooth scrolling" />

    <!-- Open Graph Meta Tags -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:url" content={canonicalURL} />

    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Performance Hints -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="dns-prefetch" href="//images.pexels.com" />
    <link rel="preload" href="/global.css" as="style" />

    <!-- Font Optimization -->
    <link rel="preload" href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:ital,wght@0,400;0,500;0,600;1,400&display=swap" as="style" />
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:ital,wght@0,400;0,500;0,600;1,400&display=swap" rel="stylesheet" />

    <!-- Theme and Performance -->
    <meta name="color-scheme" content="dark light" />
    <!-- Critical CSS akan diambil dari global.css -->

    <!-- Non-critical CSS -->
    <link rel="stylesheet" href="/global.css" />

    <!-- View Transitions API for smooth page transitions -->
    <script>
      if ('startViewTransition' in document) {
        document.addEventListener('astro:before-preparation', () => {
          document.documentElement.style.viewTransitionName = 'root';
        });
      }
    </script>
  </head>
  <body>
    <ThemeProvider />
    <DisableConflictingScrolls />
    <ScrollOptimizer />
    <main>
      <slot />
    </main>
    <Navigation />
    <Footer />
  </body>
</html>
