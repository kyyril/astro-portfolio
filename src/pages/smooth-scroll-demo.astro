---
// Smooth Scroll 120fps Demo
import SmoothScrollLayout from '../layouts/SmoothScrollLayout.astro';
import SmoothScroll120fps from '../components/SmoothScroll120fps.astro';
---

<SmoothScrollLayout 
  title="Smooth Scroll 120fps Demo" 
  description="Ultra smooth scrolling experience at 120fps"
  showPerformanceMonitor={true}
>
  <!-- Hero Section -->
  <section class="min-h-screen flex items-center justify-center px-4 bg-gradient-to-br from-[var(--color-background)] to-[var(--color-surface)]">
    <div class="text-center max-w-4xl mx-auto">
      <h1 class="text-6xl lg:text-8xl font-bold mb-6 bg-gradient-to-r from-blue-400 via-purple-500 to-pink-500 bg-clip-text text-transparent">
        Ultra Smooth
      </h1>
      <h2 class="text-3xl lg:text-4xl font-semibold mb-8 text-[var(--color-primary)]">
        120fps Scrolling
      </h2>
      <p class="text-xl lg:text-2xl text-[var(--color-text)] mb-8 leading-relaxed">
        Pengalaman scroll yang halus seperti mentega dengan performa 120fps
      </p>
      <div class="flex gap-4 justify-center flex-wrap">
        <a href="#features" class="px-6 py-3 bg-[var(--color-primary)] text-[var(--color-background)] rounded-lg font-semibold transition-all duration-150 hover:scale-105">
          Lihat Fitur
        </a>
        <a href="#performance" class="px-6 py-3 border border-[var(--color-border)] text-[var(--color-text)] rounded-lg transition-all duration-150 hover:bg-[var(--color-surface)]">
          Cek Performa
        </a>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section id="features" class="py-20 px-4">
    <div class="max-w-6xl mx-auto">
      <h2 class="text-4xl font-bold text-center mb-16 text-[var(--color-text)]">
        Fitur Smooth Scroll 120fps
      </h2>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Ultra Smooth -->
        <div class="terminal-card">
          <div class="flex items-center mb-4">
            <div class="w-3 h-3 bg-green-500 rounded-full mr-2"></div>
            <h3 class="text-lg font-semibold text-[var(--color-text)]">Ultra Smooth</h3>
          </div>
          <p class="text-[var(--color-secondary)] mb-4">
            Easing 0.06 dengan friction 0.95 untuk kelancaran maksimal.
          </p>
          <ul class="text-sm text-[var(--color-muted)] space-y-1">
            <li>• Interpolasi yang sangat halus</li>
            <li>• Tidak ada jank atau stuttering</li>
            <li>• Responsif di semua device</li>
          </ul>
        </div>

        <!-- 120fps Performance -->
        <div class="terminal-card">
          <div class="flex items-center mb-4">
            <div class="w-3 h-3 bg-blue-500 rounded-full mr-2"></div>
            <h3 class="text-lg font-semibold text-[var(--color-text)]">120fps Target</h3>
          </div>
          <p class="text-[var(--color-secondary)] mb-4">
            Optimasi khusus untuk mencapai 120fps pada high refresh rate display.
          </p>
          <ul class="text-sm text-[var(--color-muted)] space-y-1">
            <li>• RequestAnimationFrame optimization</li>
            <li>• Adaptive quality scaling</li>
            <li>• Real-time performance monitoring</li>
          </ul>
        </div>

        <!-- Custom Scroll Engine -->
        <div class="terminal-card">
          <div class="flex items-center mb-4">
            <div class="w-3 h-3 bg-purple-500 rounded-full mr-2"></div>
            <h3 class="text-lg font-semibold text-[var(--color-text)]">Custom Engine</h3>
          </div>
          <p class="text-[var(--color-secondary)] mb-4">
            Engine scroll kustom yang menggantikan native browser scrolling.
          </p>
          <ul class="text-sm text-[var(--color-muted)] space-y-1">
            <li>• Transform-based scrolling</li>
            <li>• Momentum dan inertia</li>
            <li>• Keyboard navigation support</li>
          </ul>
        </div>

        <!-- Touch Optimized -->
        <div class="terminal-card">
          <div class="flex items-center mb-4">
            <div class="w-3 h-3 bg-yellow-500 rounded-full mr-2"></div>
            <h3 class="text-lg font-semibold text-[var(--color-text)]">Touch Optimized</h3>
          </div>
          <p class="text-[var(--color-secondary)] mb-4">
            Optimasi khusus untuk touch devices dengan momentum scrolling.
          </p>
          <ul class="text-sm text-[var(--color-muted)] space-y-1">
            <li>• Touch momentum</li>
            <li>• Smooth deceleration</li>
            <li>• iOS Safari compatible</li>
          </ul>
        </div>

        <!-- Adaptive Quality -->
        <div class="terminal-card">
          <div class="flex items-center mb-4">
            <div class="w-3 h-3 bg-red-500 rounded-full mr-2"></div>
            <h3 class="text-lg font-semibold text-[var(--color-text)]">Adaptive Quality</h3>
          </div>
          <p class="text-[var(--color-secondary)] mb-4">
            Kualitas scroll yang menyesuaikan dengan performa device.
          </p>
          <ul class="text-sm text-[var(--color-muted)] space-y-1">
            <li>• FPS monitoring</li>
            <li>• Dynamic easing adjustment</li>
            <li>• Performance scaling</li>
          </ul>
        </div>

        <!-- Anchor Links -->
        <div class="terminal-card">
          <div class="flex items-center mb-4">
            <div class="w-3 h-3 bg-cyan-500 rounded-full mr-2"></div>
            <h3 class="text-lg font-semibold text-[var(--color-text)]">Smart Navigation</h3>
          </div>
          <p class="text-[var(--color-secondary)] mb-4">
            Support untuk anchor links dan keyboard navigation.
          </p>
          <ul class="text-sm text-[var(--color-muted)] space-y-1">
            <li>• Smooth anchor scrolling</li>
            <li>• Keyboard shortcuts</li>
            <li>• Page Up/Down support</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Performance Section -->
  <section id="performance" class="py-20 px-4 bg-[var(--color-surface)]/20">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="text-4xl font-bold mb-8 text-[var(--color-text)]">
        Performance Monitoring
      </h2>
      <p class="text-lg text-[var(--color-secondary)] mb-12">
        Monitor performa scroll secara real-time
      </p>
      
      <div class="grid md:grid-cols-3 gap-8 mb-12">
        <div class="terminal-card text-center">
          <h3 class="text-2xl font-bold text-[var(--color-primary)] mb-2">120fps</h3>
          <p class="text-[var(--color-secondary)]">Target Frame Rate</p>
        </div>
        <div class="terminal-card text-center">
          <h3 class="text-2xl font-bold text-[var(--color-primary)] mb-2">0.06s</h3>
          <p class="text-[var(--color-secondary)]">Easing Factor</p>
        </div>
        <div class="terminal-card text-center">
          <h3 class="text-2xl font-bold text-[var(--color-primary)] mb-2">0.95</h3>
          <p class="text-[var(--color-secondary)]">Friction Value</p>
        </div>
      </div>
      
      <div class="terminal-card text-left">
        <h3 class="text-xl font-semibold mb-4 text-[var(--color-text)]">Cara Kerja</h3>
        <ol class="space-y-3 text-[var(--color-secondary)]">
          <li><strong>1. Input Detection:</strong> Mendeteksi wheel, touch, dan keyboard input</li>
          <li><strong>2. Target Calculation:</strong> Menghitung posisi scroll target</li>
          <li><strong>3. Smooth Interpolation:</strong> Menggunakan easing dan friction untuk kelancaran</li>
          <li><strong>4. Transform Application:</strong> Mengaplikasikan translate3d untuk performa optimal</li>
          <li><strong>5. Performance Monitoring:</strong> Memantau FPS dan menyesuaikan kualitas</li>
        </ol>
      </div>
    </div>
  </section>

  <!-- Test Section -->
  <section class="py-20 px-4">
    <div class="max-w-4xl mx-auto">
      <h2 class="text-4xl font-bold text-center mb-12 text-[var(--color-text)]">
        Test Scroll Performance
      </h2>
      
      <div class="space-y-8">
        <!-- Long content for testing -->
        {Array.from({ length: 20 }, (_, i) => (
          <div class="terminal-card">
            <h3 class="text-xl font-semibold mb-4 text-[var(--color-text)]">
              Test Section {i + 1}
            </h3>
            <p class="text-[var(--color-secondary)] mb-4">
              Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor 
              incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis 
              nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
            </p>
            <p class="text-[var(--color-muted)]">
              Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore 
              eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, 
              sunt in culpa qui officia deserunt mollit anim id est laborum.
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Navigation Test -->
  <section class="py-20 px-4 bg-[var(--color-surface)]/20">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="text-4xl font-bold mb-8 text-[var(--color-text)]">
        Navigation Test
      </h2>
      <p class="text-lg text-[var(--color-secondary)] mb-8">
        Test anchor links dan keyboard navigation
      </p>
      
      <div class="flex gap-4 justify-center flex-wrap mb-8">
        <a href="#features" class="px-4 py-2 bg-[var(--color-primary)] text-[var(--color-background)] rounded transition-all duration-150 hover:scale-105">
          Go to Features
        </a>
        <a href="#performance" class="px-4 py-2 bg-[var(--color-secondary)] text-[var(--color-background)] rounded transition-all duration-150 hover:scale-105">
          Go to Performance
        </a>
        <a href="#top" class="px-4 py-2 border border-[var(--color-border)] text-[var(--color-text)] rounded transition-all duration-150 hover:bg-[var(--color-surface)]">
          Back to Top
        </a>
      </div>
      
      <div class="terminal-card text-left">
        <h3 class="text-lg font-semibold mb-4 text-[var(--color-text)]">Keyboard Shortcuts:</h3>
        <ul class="space-y-2 text-[var(--color-secondary)]">
          <li><kbd class="px-2 py-1 bg-[var(--color-surface)] rounded text-xs">↑/↓</kbd> - Scroll up/down</li>
          <li><kbd class="px-2 py-1 bg-[var(--color-surface)] rounded text-xs">Page Up/Down</kbd> - Page scroll</li>
          <li><kbd class="px-2 py-1 bg-[var(--color-surface)] rounded text-xs">Home/End</kbd> - Go to top/bottom</li>
          <li><kbd class="px-2 py-1 bg-[var(--color-surface)] rounded text-xs">Space</kbd> - Page down (Shift+Space for up)</li>
        </ul>
      </div>
    </div>
  </section>

  <!-- Include Smooth Scroll Component -->
  <SmoothScroll120fps />
</SmoothScrollLayout>

<style>
  /* Demo specific styles */
  kbd {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
  }
  
  /* Smooth transitions for demo elements */
  .terminal-card {
    transition: transform 0.15s ease, box-shadow 0.15s ease;
  }
  
  .terminal-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
  }
  
  /* Gradient animation */
  .bg-gradient-to-r {
    background-size: 200% 200%;
    animation: gradientShift 4s ease infinite;
  }
  
  @keyframes gradientShift {
    0%, 100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }
</style>
