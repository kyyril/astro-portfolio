---
// Fast Transitions Demo - Simple, Fast & Cool
import FastTransitionLayout from '../layouts/FastTransitionLayout.astro';
import FastTransitions from '../components/FastTransitions.astro';
---

<FastTransitionLayout title="Fast Transitions Demo - Cepat dan Keren">
  <!-- Hero section -->
  <section class="min-h-screen flex items-center justify-center px-4">
    <div class="text-center max-w-4xl mx-auto">
      <h1 class="fade-in-element text-6xl lg:text-8xl font-bold mb-6 bg-gradient-to-r from-blue-400 via-purple-500 to-pink-500 bg-clip-text text-transparent">
        Fast & Cool
      </h1>
      <p class="fade-in-element text-xl lg:text-2xl text-[var(--color-text)] mb-8 leading-relaxed">
        Transisi cepat dan elegan tanpa animasi berlebihan
      </p>
      <div class="fade-in-element flex gap-4 justify-center flex-wrap">
        <button class="btn-cool px-6 py-3 bg-[var(--color-primary)] text-[var(--color-background)] rounded-lg font-semibold">
          Coba Sekarang
        </button>
        <button class="btn-cool px-6 py-3 border border-[var(--color-border)] text-[var(--color-text)] rounded-lg">
          Lihat Demo
        </button>
      </div>
    </div>
  </section>

  <!-- Features section -->
  <section class="py-16 px-4">
    <div class="max-w-6xl mx-auto">
      <h2 class="text-4xl font-bold text-center mb-12 text-[var(--color-text)]">
        Fitur Transisi Cepat
      </h2>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Fast Hover Card -->
        <div class="terminal-card fast-hover">
          <div class="flex items-center mb-4">
            <div class="w-3 h-3 bg-green-500 rounded-full mr-2"></div>
            <h3 class="text-lg font-semibold text-[var(--color-text)]">Fast Hover</h3>
          </div>
          <p class="text-[var(--color-secondary)] mb-4">
            Efek hover yang cepat dan responsif dengan transisi 0.15s.
          </p>
          <ul class="text-sm text-[var(--color-muted)] space-y-1">
            <li>• Transisi translateY(-3px)</li>
            <li>• Box shadow yang smooth</li>
            <li>• Background color change</li>
          </ul>
        </div>

        <!-- Scale Effect Card -->
        <div class="terminal-card scale-hover">
          <div class="flex items-center mb-4">
            <div class="w-3 h-3 bg-blue-500 rounded-full mr-2"></div>
            <h3 class="text-lg font-semibold text-[var(--color-text)]">Scale Effect</h3>
          </div>
          <p class="text-[var(--color-secondary)] mb-4">
            Efek scale yang subtle dan elegan untuk interaksi.
          </p>
          <ul class="text-sm text-[var(--color-muted)] space-y-1">
            <li>• Scale 1.02 on hover</li>
            <li>• Instant feedback</li>
            <li>• Smooth transition</li>
          </ul>
        </div>

        <!-- Glow Effect Card -->
        <div class="terminal-card glow-hover">
          <div class="flex items-center mb-4">
            <div class="w-3 h-3 bg-purple-500 rounded-full mr-2"></div>
            <h3 class="text-lg font-semibold text-[var(--color-text)]">Glow Effect</h3>
          </div>
          <p class="text-[var(--color-secondary)] mb-4">
            Efek glow yang memberikan feedback visual yang menarik.
          </p>
          <ul class="text-sm text-[var(--color-muted)] space-y-1">
            <li>• Box shadow glow</li>
            <li>• Primary color accent</li>
            <li>• Smooth fade in/out</li>
          </ul>
        </div>

        <!-- Ripple Effect Card -->
        <div class="terminal-card" id="rippleCard">
          <div class="flex items-center mb-4">
            <div class="w-3 h-3 bg-yellow-500 rounded-full mr-2"></div>
            <h3 class="text-lg font-semibold text-[var(--color-text)]">Ripple Effect</h3>
          </div>
          <p class="text-[var(--color-secondary)] mb-4">
            Efek ripple saat diklik untuk feedback yang interaktif.
          </p>
          <ul class="text-sm text-[var(--color-muted)] space-y-1">
            <li>• Click untuk melihat ripple</li>
            <li>• Material design inspired</li>
            <li>• Smooth animation</li>
          </ul>
        </div>

        <!-- Fast Loading Card -->
        <div class="terminal-card">
          <div class="flex items-center mb-4">
            <div class="w-3 h-3 bg-red-500 rounded-full mr-2"></div>
            <h3 class="text-lg font-semibold text-[var(--color-text)]">Fast Loading</h3>
          </div>
          <p class="text-[var(--color-secondary)] mb-4">
            Loading states yang cepat dan tidak mengganggu.
          </p>
          <div class="flex items-center gap-2 mt-4">
            <div class="loading-spin w-4 h-4 border-2 border-[var(--color-border)] border-t-[var(--color-primary)] rounded-full"></div>
            <span class="text-sm text-[var(--color-muted)]">Loading...</span>
          </div>
        </div>

        <!-- Smooth Scroll Card -->
        <div class="terminal-card">
          <div class="flex items-center mb-4">
            <div class="w-3 h-3 bg-cyan-500 rounded-full mr-2"></div>
            <h3 class="text-lg font-semibold text-[var(--color-text)]">Smooth Scroll</h3>
          </div>
          <p class="text-[var(--color-secondary)] mb-4">
            Scroll reveal yang smooth dengan Intersection Observer.
          </p>
          <ul class="text-sm text-[var(--color-muted)] space-y-1">
            <li>• Fade in on scroll</li>
            <li>• Staggered animation</li>
            <li>• Performance optimized</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Interactive demo section -->
  <section class="py-16 px-4 bg-[var(--color-surface)]/20">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="text-4xl font-bold mb-8 text-[var(--color-text)]">
        Interactive Demo
      </h2>
      <p class="text-lg text-[var(--color-secondary)] mb-8">
        Coba berbagai efek transisi di bawah ini
      </p>
      
      <!-- Demo buttons -->
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-4 mb-8">
        <button class="btn-cool px-4 py-3 bg-[var(--color-primary)] text-[var(--color-background)] rounded-lg">
          Primary Button
        </button>
        <button class="btn-cool px-4 py-3 border border-[var(--color-border)] text-[var(--color-text)] rounded-lg hover:bg-[var(--color-surface)]">
          Secondary Button
        </button>
        <button class="btn-cool px-4 py-3 bg-gradient-to-r from-blue-500 to-purple-600 text-white rounded-lg">
          Gradient Button
        </button>
        <button class="btn-cool px-4 py-3 bg-[var(--color-accent)] text-[var(--color-background)] rounded-lg">
          Accent Button
        </button>
      </div>
      
      <!-- Demo cards -->
      <div class="grid md:grid-cols-3 gap-6">
        <div class="terminal-card fast-hover cursor-pointer">
          <h3 class="text-lg font-semibold mb-2">Fast Hover</h3>
          <p class="text-[var(--color-secondary)]">Hover untuk melihat efek</p>
        </div>
        <div class="terminal-card scale-hover cursor-pointer">
          <h3 class="text-lg font-semibold mb-2">Scale Effect</h3>
          <p class="text-[var(--color-secondary)]">Hover untuk scale</p>
        </div>
        <div class="terminal-card glow-hover cursor-pointer">
          <h3 class="text-lg font-semibold mb-2">Glow Effect</h3>
          <p class="text-[var(--color-secondary)]">Hover untuk glow</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Performance info -->
  <section class="py-16 px-4">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="text-4xl font-bold mb-8 text-[var(--color-text)]">
        Kenapa Transisi Cepat?
      </h2>
      
      <div class="grid md:grid-cols-2 gap-8 text-left">
        <div>
          <h3 class="text-xl font-semibold mb-4 text-[var(--color-primary)]">Performa Optimal</h3>
          <ul class="space-y-2 text-[var(--color-secondary)]">
            <li>• Transisi 0.1s - 0.2s untuk responsivitas</li>
            <li>• Hanya menggunakan transform dan opacity</li>
            <li>• Tidak ada animasi yang berat</li>
            <li>• CSS transitions yang native</li>
          </ul>
        </div>
        
        <div>
          <h3 class="text-xl font-semibold mb-4 text-[var(--color-primary)]">User Experience</h3>
          <ul class="space-y-2 text-[var(--color-secondary)]">
            <li>• Feedback yang instant</li>
            <li>• Tidak mengganggu workflow</li>
            <li>• Terasa natural dan smooth</li>
            <li>• Accessible untuk semua device</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Include Fast Transitions Component -->
  <FastTransitions />
</FastTransitionLayout>

<style>
  /* Demo specific styles */
  .fade-in-element:nth-child(1) { animation-delay: 0.1s; }
  .fade-in-element:nth-child(2) { animation-delay: 0.2s; }
  .fade-in-element:nth-child(3) { animation-delay: 0.3s; }
  .fade-in-element:nth-child(4) { animation-delay: 0.4s; }
  
  /* Cool gradient text */
  .bg-gradient-to-r {
    background-size: 200% 200%;
    animation: gradientShift 3s ease infinite;
  }
  
  @keyframes gradientShift {
    0%, 100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }
</style>
